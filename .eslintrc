{
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "quotes": 0,
      "no-console": 1,
      "no-debugger": 1,
      "no-unreachable": "off",
      "no-var": 1,
      "semi": [1, "never"],
      "no-trailing-spaces": 0,
      "eol-last": 0,
      "no-unused-vars": 0,
      "no-underscore-dangle": 0,
      "no-alert": 0,
      "no-lone-blocks": 0,
      "no-useless-escape": 0
    },
    "overrides": [
        {
            "files": [ "*.test.js", "*.spec.js" ],
            "rules": {
                "max-lines-per-function": "off",
                "max-lines": "off",
                "max-statements": "off",
                "no-magic-numbers": "off",
                "no-console": "off"
            }
        }
    ]

  }
